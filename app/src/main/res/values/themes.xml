<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MaterialComponents.DayNight.NoActionBar.Bridge" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" />

    <style name="Theme.Movie42" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="android:textAppearance">@style/TextStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="toolbarStyle">@style/MainToolbar</item>
    </style>
    <!-- Customize your theme here. -->


    <style name="MainToolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">


        <item name="android:background">@color/background</item>
        <item name="titleTextColor">@color/white</item>
        <item name="searchViewStyle">@style/MainToolbar.SearchView</item>
        <item name="android:searchViewStyle">@style/MainToolbar.SearchView</item>
    </style>

    <style name="MainToolbar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="editTextColor">@color/base_text</item>
        <item name="android:editTextColor">@color/base_text</item>

    </style>


    <!--  Movie Details Style -->
    <style name="Theme.Movie42.MovieDetails" />

    <style name="MovieDetails.BackButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="drawableStartCompat">@drawable/ic_path</item>
        <item name="android:drawablePadding">@dimen/movie_details_back_button_drawable_padding
        </item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:padding">@dimen/movie_details_back_button_padding</item>
        <item name="android:textColor">@color/white_alfa</item>
        <item name="textAllCaps">true</item>
        <item name="actionTextColorAlpha">0.5</item>
        <item name="android:textSize">@dimen/movie_details_back_button_text_size</item>
    </style>

    <style name="MovieDetails.RecycleView" parent="Theme.Movie42.MovieDetails">
        <item name="background">@android:color/transparent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:paddingBottom">@dimen/movie_details_recycle_view_padding_bottom</item>
    </style>

    <!--  Movie List Style -->
    <style name="Theme.Movie42.MovieList" />

    <style name="MovieList.RecycleView" parent="Theme.Movie42.MovieList">
        <item name="android:clipToPadding">true</item>
    </style>

    <!--  Main Item Style -->
    <style name="Theme.Movie42.MainItem" />

    <style name="MainItem.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">@color/background</item>
        <item name="cardCornerRadius">@dimen/movie_main_item_card_corner_radius</item>
        <item name="strokeColor">@color/movie_main_item_card_stroke_color</item>
        <item name="strokeWidth">@dimen/movie_main_item_card_stroke_width</item>
    </style>

    <style name="MainItem.Keywords" parent="Theme.Movie42.MainItem">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/movie_main_item_keywordtext_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MainItem.ReviewsText" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/movie_main_item_reviewstext_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MainItem.Label" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/movie_main_item_labelmaintext_size</item>
        <item name="android:textColor">@color/label_text</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MainItem.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingBarColor" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <!--  Movie Item Style -->
    <style name="Theme.Movie42.MovieItems" />


    <style name="MovieItem.PG" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/base_text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MovieItem.Label" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/label_text</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="MovieItem.Keywords" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>


    <style name="MovieItem.RatingBar" parent="Widget.AppCompat.RatingBar.Small">

        <item name="android:isIndicator">true</item>

    </style>

    <style name="MovieItem.ReviewsText" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MovieItem.LineHeadText" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/label_text</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MovieItem.StoryLineText" parent="Theme.Movie42.MovieItems">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:textColor">@color/base_text</item>
        <item name="android:gravity">start</item>
    </style>


    <!--  Cast Item Style -->

    <style name="Cast">
        <item name="android:padding">4dp</item>
    </style>

    <style name="Cast.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/base_text</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_text</item>
    </style>


</resources>